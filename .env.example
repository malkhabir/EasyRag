# EasyRag Environment Configuration
# Copy this file to .env and configure your providers

# Application Settings
EASYRAG_DEBUG=false
EASYRAG_LOG_LEVEL=INFO

# Active Providers
EASYRAG_ACTIVE_LLM_PROVIDER=local
EASYRAG_ACTIVE_EMBEDDING_PROVIDER=huggingface

# Vector Database
EASYRAG_QDRANT_HOST=localhost
EASYRAG_QDRANT_PORT=6333
EASYRAG_QDRANT_COLLECTION_NAME=documents

# OpenAI Configuration (if using OpenAI providers)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (if using Anthropic providers)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Azure OpenAI Configuration (if using Azure providers)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
AZURE_OPENAI_API_VERSION=2023-05-15

# HuggingFace Configuration (optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Ollama Configuration (local provider)
EASYRAG_LLM_PROVIDERS__LOCAL__HOST=localhost
EASYRAG_LLM_PROVIDERS__LOCAL__PORT=11434

# GPU/CUDA Configuration
CUDA_VISIBLE_DEVICES=0  # Specify GPU device if available